span
  | {{i.label}}
  span.pl-sm.text-grey {{i.tip}}
div([ngSwitch]='i.type')
  ng-container(*ngSwitchCase="'color'")
    input(nz-input, type='color', style='min-width: 88px', [(ngModel)]='i.value', [ngModelOptions]='{standalone: true}')
  ng-container(*ngSwitchCase="'input'")
    input(nz-input, style='min-width: 88px', [(ngModel)]='i.value', [ngModelOptions]='{standalone: true}')
  ng-container(*ngSwitchCase="'px'")
    nz-input-number([(ngModel)]='pxVal', (ngModelChange)='pxChange($event)', [nzMin]='i.min', [nzMax]='i.max', [nzStep]='i.step || 2', [nzFormatter]='format')
  ng-container(*ngSwitchCase="'switch'")
    nz-switch(nzSize='small', [(ngModel)]='i.value', [ngModelOptions]='{standalone: true}')
  ng-container(*ngSwitchDefault)
    ng-content
